public class Hamburger {
    private String RollType;
    private String meat;
    private boolean lettuce;
    private boolean tomato;
    private boolean carrot;
    private boolean pickle;
    private int breadprice=5;
    private int meatprice=10;
    private int lettuceprice=1;
    private int tomatoprice=1;
    private int carrotprice=1;
    private int pickleprice=1;
    private int totalprice=0;

    public Hamburger(String rollType, String meat) {
        RollType = rollType;
        this.meat = meat;

    }

    public int calculateprice(boolean lettuce, boolean tomato, boolean carrot, boolean pickle){
        if(lettuce) this.totalprice++;
        if(tomato) this.totalprice++;
        if(carrot) this.totalprice++;
        if(pickle) this.totalprice++;

        this.totalprice = this.totalprice + this.breadprice + this.meatprice;

        return this.totalprice;
    }

    public int getTotalprice() {
        return totalprice;
    }
}
